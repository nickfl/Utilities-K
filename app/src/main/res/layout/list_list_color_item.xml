<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="@android:color/background_light">

        <View
            android:id="@+id/viewLine"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewTotalPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@android:color/background_light"
            android:text="@string/utility_price"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDuePaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="15dp"
            android:text="Due: Jan 01, 2018"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDataPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewDuePaid"
            android:layout_below="@+id/textViewDuePaid"
            android:layout_marginTop="15dp"
            android:text="Paid: Jan 01, 2018"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewAmountPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDataPaid"
            android:layout_alignStart="@+id/textViewDuePaid"
            android:layout_marginTop="14dp"
            android:text="Amount: $328.09"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageViewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:tint="@android:color/holo_red_dark"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp" />

    </RelativeLayout>

</LinearLayout>
